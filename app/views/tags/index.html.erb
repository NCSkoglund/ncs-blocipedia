<h1>Tags#index</h1>
<div class="col-md-8">
  <% @tags.each do |tag| %>
    <% if tag.wikis.count > 0 %>
      <div class="media">
        <div class="media-body">
          <strong>
            <%= link_to tag.tag, tag %>
          </strong><br/>
          <small>
            <em>Total Wikicount: <%= tag.wikis.count %></em><br/>
            <% tag.wikis.each do |wiki| %>


              <!-- I want this to be a shared partial but don't know how to handle local variables inside an each block--> 
              <% if current_user && (current_user.level?(:premium) || current_user.level?(:admin)) %>
                <%= link_to wiki.title, wiki %>
              <% else %>
                <% if wiki.private == false %>
                  <%= link_to wiki.title, wiki %>
                <% end %>
                Private?  <%= wiki.private %><br/>
              <% end %>

              
            <% end %>
          </small>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
